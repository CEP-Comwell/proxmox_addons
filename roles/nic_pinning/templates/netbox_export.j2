{
  "device": "{{ inventory_hostname }}",
  "interfaces": [
  {% for kernel, norm in nic_names.items() %}
    {
      "name": "{{ kernel }}",
      "normalized": "{{ norm }}",
      "mac": "{{ lookup('file', '/sys/class/net/' ~ kernel ~ '/address') | default('') }}"
    }{% if not loop.last %},{% endif %}
  {% endfor %}
  ]
}
